---
layout: default
---

<article class="topic">
  <header>
    <span class="topic-label">Topic</span>
    <h1><%= resource.data.title %></h1>
    <% if resource.data.tags %>
    <div class="tags">
      <% resource.data.tags.each do |tag| %>
        <span class="tag"><%= tag %></span>
      <% end %>
    </div>
    <% end %>
  </header>

  <div class="topic-content">
    <%= yield %>
  </div>

  <footer>
    <% if resource.data.references %>
    <h3>References</h3>
    <ul>
      <% resource.data.references.each do |ref| %>
        <li><%= ref %></li>
      <% end %>
    </ul>
    <% end %>
  </footer>
</article>
